<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.yanhuahealth.healthlauncher.ui.setting.AboutActivity">
    <include layout="@layout/navbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:padding="32dp"
        android:background="@color/white"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/icon_xxlarge"
            android:layout_height="@dimen/icon_xxlarge"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_large"
            android:text="延华老人桌面"/>
        <TextView
            android:id="@+id/curr_ver_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_large"
            android:text="V1.1.0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copyright_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/check_version_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/btn_first_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:text="检测新版本"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_normal"
            android:text="延华健康 2013-2016 版权所有"/>
    </LinearLayout>
</RelativeLayout>
