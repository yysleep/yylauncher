<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="20dp"
              android:paddingBottom="20dp">
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        style="@style/DefaultListItemTitle"
        android:text="内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题内容标题"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/gray"
            android:text="5天前"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/gray"
            android:text="延华健康"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:id="@+id/thumb1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/thumb1_first_iv"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:scaleType="centerCrop"
                android:background="@color/default_img_bg"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/thumb2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/thumb2_first_iv"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:background="@color/default_img_bg"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:id="@+id/thumb2_second_iv"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/default_img_bg"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/thumb3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/thumb3_first_iv"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:background="@color/default_img_bg"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:id="@+id/thumb3_second_iv"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/default_img_bg"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:id="@+id/thumb3_third_iv"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:background="@color/default_img_bg"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>