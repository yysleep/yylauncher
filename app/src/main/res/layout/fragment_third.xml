<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    tools:context=".ui.fragment.ThirdFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/shortcut_margin"
        android:background="@drawable/shortcut_box_news_bg"
        android:gravity="center">
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/latest_news_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicator_visibility="invisible"
            android:visibility="gone"
            app:auto_cycle="true" />
        <LinearLayout
            android:id="@+id/loading_news_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@android:style/Widget.Holo.ProgressBar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                style="@style/DefaultListItemTitle"
                android:textColor="@color/white"
                android:text="热点推荐"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/shortcut_margin"
        android:orientation="horizontal">
        <com.yanhuahealth.healthlauncher.ui.base.ShortcutBoxView
            android:id="@+id/third_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/shortcut_margin"
            android:layout_weight="1"
            app:shortcutTitle="快捷方式"
            app:shortcutIcon="@drawable/ic_launcher"/>
        <com.yanhuahealth.healthlauncher.ui.base.ShortcutBoxView
            android:id="@+id/forth_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/shortcut_margin"
            android:layout_weight="1"
            app:shortcutTitle="快捷方式"
            app:shortcutIcon="@drawable/ic_launcher"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/shortcut_margin"
        android:orientation="horizontal">
        <com.yanhuahealth.healthlauncher.ui.base.ShortcutBoxView
            android:id="@+id/fifth_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/shortcut_margin"
            android:layout_weight="1"
            app:shortcutTitle="快捷方式"
            app:shortcutIcon="@drawable/ic_launcher"/>
        <com.yanhuahealth.healthlauncher.ui.base.ShortcutBoxView
            android:id="@+id/sixth_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/shortcut_margin"
            android:layout_weight="1"
            app:shortcutTitle="快捷方式"
            app:shortcutIcon="@drawable/ic_launcher"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/shortcut_margin"
        android:orientation="horizontal">
        <com.yanhuahealth.healthlauncher.ui.base.ShortcutBoxView
            android:id="@+id/seventh_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/shortcut_margin"
            android:layout_weight="1"
            app:shortcutTitle="快捷方式"
            app:shortcutIcon="@drawable/ic_launcher"/>
        <com.yanhuahealth.healthlauncher.ui.base.ShortcutBoxView
            android:id="@+id/eighth_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/shortcut_margin"
            android:layout_weight="1"
            app:shortcutTitle="快捷方式"
            app:shortcutIcon="@drawable/ic_launcher"/>
    </LinearLayout>

</LinearLayout>
