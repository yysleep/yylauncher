<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/playing_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/playing_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tvTab"
        android:orientation="vertical"
        android:padding="6dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/playing_time_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp" />

        <SeekBar
            android:id="@+id/playing_progress_sb"
            style="@style/Base.Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playing_last_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bg_last_music" />

            <ImageView
                android:id="@+id/playing_play_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_music_play" />

            <ImageView
                android:id="@+id/playing_next_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/bg_next_music" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
