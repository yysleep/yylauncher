<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/ebook_left_iv"
        android:layout_width="@dimen/list_item_thumb_size"
        android:layout_height="@dimen/list_item_thumb_size"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:background="@color/bg_light_grey"
        android:src="@drawable/ic_default_book_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_tv"
            style="@style/DefaultListItemSingleLineNormalTitle"
            android:text="电子书电子书名称电子书名称" />
        <TextView
            android:id="@+id/subtitle_tv"
            style="@style/DefaultListItemSingleLineSubtitle"
            android:layout_marginTop="4dp"
            android:text="作者: 张大千" />
        <TextView
            android:id="@+id/content_size_tv"
            style="@style/DefaultListItemSingleLineSubtitle"
            android:layout_marginTop="4dp"
            android:text="大小: 18.2 MB"/>
    </LinearLayout>

    <Button
        android:id="@+id/status_btn"
        android:layout_gravity="center_vertical"
        style="@style/DefaultDownloadBtn"
        android:text="已下载"
        android:visibility="visible" />

</LinearLayout>